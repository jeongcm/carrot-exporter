[
    {
        "alertTargetGroupName": "Physical Host",
        "alertTargetSubGroupName": "Host CPU Utilization",
        "alertEasyRuleName": "HostCpuHigh",
        "alertEasyRuleQuery": "100 - (avg by (node) (rate(node_cpu_seconds_total{node!=\"\", mode=\"idle\"}[2m])) * 100) > alertEasyRuleThreshold1",
        "alertEasyRuleDuration": "2m",
        "alertEasyRuleThreshold1": "80",
        "alertEasyRuleDescription": "CPU load is > alertEasyRuleThreshold1% \n VALUE = {{ $value }} \n LABELS = {{ $labels }}",
        "alertEasyRuleSummary": "Host high CPU load (node {{ $labels.node }})",        
        "alertEasyRuleGroup": "co-node",
        "alertEasyRuleSeverity": "critical",
        "alertEasyRuleThreshold1Unit": "percentage",
        "alertEasyRuleThreshold1Max": "100"
    },
    {
        "alertTargetGroupName": "Physical Host",
        "alertTargetSubGroupName": "Host Memory Utilization",
        "alertEasyRuleName": "HostMemoryHigh",
        "alertEasyRuleQuery": "(sum by (node) (node_memory_MemTotal_bytes{node!=\"\"}) - sum by (node) (node_memory_MemFree_bytes{node!=\"\"}) - sum by (node) (node_memory_Buffers_bytes{node!=\"\"}) - sum by (node)(node_memory_Cached_bytes{node!=\"\"}) - sum by (node)(node_memory_SReclaimable_bytes{node!=\"\"})) / sum by (node) (node_memory_MemTotal_bytes{node!=\"\"}) * 100 > alertEasyRuleThreshold1",
        "alertEasyRuleDuration": "2m",
        "alertEasyRuleThreshold1": "80",
        "alertEasyRuleDescription": "Host memory is filling up (> alertEasyRuleThreshold1% )\n  VALUE = {{ $value }}\n  LABELS = {{ $labels }}",
        "alertEasyRuleSummary": "Host out of memory (node {{ $labels.node }})",
        "alertEasyRuleGroup": "co-node",
        "alertEasyRuleSeverity": "critical",
        "alertEasyRuleThreshold1Unit": "percentage",
        "alertEasyRuleThreshold1Max": "100"
    },
    {
        "alertTargetGroupName": "Physical Host",
        "alertTargetSubGroupName": "Host Network Error",
        "alertEasyRuleName": "HostNetworkInErrs",
        "alertEasyRuleQuery": "sum by (node) (rate(node_network_receive_errs_total{node!=\"\"}[2m])) / sum by (node) (rate(node_network_receive_packets_total{node!=\"\"}[2m])) * 100 > alertEasyRuleThreshold1",
        "alertEasyRuleDuration": "2m",
        "alertEasyRuleThreshold1": "1",
        "alertEasyRuleDescription": "Host network interfaces (receive) show error reate more than (> alertEasyRuleThreshold1% )\n  VALUE = {{ $value }}\n  LABELS = {{ $labels }}",
        "alertEasyRuleSummary": "Host network receive error irate - (node {{ $labels.node }})",
        "alertEasyRuleGroup": "co-node",
        "alertEasyRuleSeverity": "warning",
        "alertEasyRuleThreshold1Unit": "percentage",
        "alertEasyRuleThreshold1Max": "100"
    },
    {
        "alertTargetGroupName": "Physical Host",
        "alertTargetSubGroupName": "Host Network Error",
        "alertEasyRuleName": "HostNetworkOutErrs",
        "alertEasyRuleQuery": "sum by (node) (rate(node_network_transmit_errs_total{node!=\"\"}[2m])) / sum by (node) (rate(node_network_transmit_packets_total{node!=\"\"}[2m])) * 100 > alertEasyRuleThreshold1",
        "alertEasyRuleDuration": "2m",
        "alertEasyRuleThreshold1": "1",
        "alertEasyRuleDescription": "Host network interfaces (transmit) show error reate more than (> alertEasyRuleThreshold1% )\n  VALUE = {{ $value }}\n  LABELS = {{ $labels }}",
        "alertEasyRuleSummary": "Host network transmit error irate - (node {{ $labels.node }})",
        "alertEasyRuleGroup": "co-node",
        "alertEasyRuleSeverity": "warning",
        "alertEasyRuleThreshold1Unit": "percentage",
        "alertEasyRuleThreshold1Max": "100"
    },
    {
        "alertTargetGroupName": "Physical Host",
        "alertTargetSubGroupName": "Host Network Utilization",
        "alertEasyRuleName": "HostNetworkInHigh",
        "alertEasyRuleQuery": "sum by (node) (irate(node_network_receive_bytes_total{node!=\"\"}[2m])) > alertEasyRuleThreshold1",
        "alertEasyRuleDuration": "2m",
        "alertEasyRuleThreshold1": "100000000",
        "alertEasyRuleDescription": "Host unusual network throughput in (node {{ $labels.node }})",
        "alertEasyRuleSummary": "Host unusual network throughput in (node {{ $labels.node }})",
        "alertEasyRuleGroup": "co-node",
        "alertEasyRuleSeverity": "warning",
        "alertEasyRuleThreshold1Unit": "byte",
        "alertEasyRuleThreshold1Max": "200000000"
    },
    {
        "alertTargetGroupName": "Physical Host",
        "alertTargetSubGroupName": "Host Network Utilization",
        "alertEasyRuleName": "HostNetworkOutHigh",
        "alertEasyRuleQuery": "sum by (node) (irate(node_network_transmit_bytes_total{node!=\"\"}[2m])) > alertEasyRuleThreshold1",
        "alertEasyRuleDuration": "2m",
        "alertEasyRuleThreshold1": "100000000",
        "alertEasyRuleDescription": "Host unusual network throughput out (node {{ $labels.node }})",
        "alertEasyRuleSummary": "Host unusual network throughput out (node {{ $labels.node }})",
