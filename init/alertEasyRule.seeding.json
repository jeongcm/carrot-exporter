[
    {
        "alertTargetGroupName": "Kubernetes Node",
        "alertTargetSubGroupName": "Node CPU Utilization",
        "alertEasyRuleName": "HostHighCpuLoadMax",
        "alertEasyRuleQuery": "sum by (node) (irate(container_cpu_usage_seconds_total{pod!=\"\", container!=\"\"}[3m])) / sum by (node)(kube_node_status_allocatable{resource=\"cpu\"}) * 100 > alertEasyRuleThreshold1",
        "alertEasyRuleDuration": "5m",
        "alertEasyRuleThreshold1": "80",
        "alertEasyRuleDescription": "CPU load is > alertEasyRuleThreshold1% \n VALUE = {{ $value }} \n LABELS = {{ $labels }}",
        "alertEasyRuleSummary": "Host high CPU load (node {{ $labels.node }})",        
        "alertEasyRuleGroup": "nc-node",
        "alertEasyRuleSeverity": "critical",
        "alertEasyRuleThreshold1Unit": "percentage",
        "alertEasyRuleThreshold1Max": "100"
    },
    {
        "alertTargetGroupName": "Kubernetes Node",
        "alertTargetSubGroupName": "Node Memory Utilization",
        "alertEasyRuleName": "HostOutOfMemoryMax",
        "alertEasyRuleQuery": "sum by(node)(container_memory_working_set_bytes{pod!=\"\", container!=\"\"})/ sum by (node)(kube_node_status_allocatable{resource=\"memory\"}) * 100 > alertEasyRuleThreshold1",
        "alertEasyRuleDuration": "5m",
        "alertEasyRuleThreshold1": "80",
        "alertEasyRuleDescription": "Node memory is filling up (> alertEasyRuleThreshold1% )\n  VALUE = {{ $value }}\n  LABELS = {{ $labels }}",
        "alertEasyRuleSummary": "Host out of memory (node {{ $labels.node }})",
        "alertEasyRuleGroup": "nc-node",
        "alertEasyRuleSeverity": "critical",
        "alertEasyRuleThreshold1Unit": "percentage",
        "alertEasyRuleThreshold1Max": "100"
    },
    {
        "alertTargetGroupName": "Kubernetes Pod",
        "alertTargetSubGroupName": "Pod CPU Utilization",
        "alertEasyRuleName": "PodCPUThresholdOver",
        "alertEasyRuleQuery": "sum by(pod, namespace, node) (irate(container_cpu_usage_seconds_total{pod!=\"\",container!=\"\"}[3m])) * 1000 > alertEasyRuleThreshold1",
        "alertEasyRuleDuration": "5m",
        "alertEasyRuleThreshold1": "1000",
        "alertEasyRuleDescription": "Pod CPU usage is > alertEasyRuleThreshold1m \n VALUE = {{ $value }}\n LABELS = {{ $labels }}",
        "alertEasyRuleSummary": "Pod CPU usage is over threshold (pod {{ $labels.pod }})",
        "alertEasyRuleGroup": "nc-kube-resource",
        "alertEasyRuleSeverity": "critical",
        "alertEasyRuleThreshold1Unit": "core",
        "alertEasyRuleThreshold1Max": "2000"
    },
    {
        "alertTargetGroupName": "Kubernetes Pod",
        "alertTargetSubGroupName": "Pod Memory Utilization",
        "alertEasyRuleName": "PodMemoryThresholdOver",
        "alertEasyRuleQuery": "sum by (pod, namespace, node) (container_memory_working_set_bytes{pod!=\"\", container!=\"\"}) > alertEasyRuleThreshold1",
        "alertEasyRuleDuration": "5m",
        "alertEasyRuleThreshold1": "2000000000",
        "alertEasyRuleDescription": "Pod memory usage is > alertEasyRuleThreshold1 byte /n VALUE = {{ $value }} /n LABELS = {{ $labels }}",
        "alertEasyRuleSummary": "Pod memory usage is over threshold (pod {{ $labels.pod }})",
        "alertEasyRuleGroup": "nc-kube-resource",
        "alertEasyRuleSeverity": "critical",
        "alertEasyRuleThreshold1Unit": "byte",
        "alertEasyRuleThreshold1Max": "3000000000"
    }
  ]

  