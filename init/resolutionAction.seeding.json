    {
        "ruleGroupName": "KubernetesPodCPU",
        "resolutionActionName": "GetPodCpuMetrics",
        "resolutionActionDescription": "Get Pod Cpu Metrics",
        "rresolutionActionTemplateSteps": {"url":"#prometheusurl","query":"sum by(pod) (rate(container_cpu_usage_seconds_total{image!=\"\",container=~\".*\", pod=\"#name\",namespace=\"#namespace\"}[5m] ) )","start":"#start","end":"#end","step":"5m"},
        "resolutionActionType": "MO",
        "sudorytemplateUuid": "10000000000000000000000000000002"
    },
    {
        "ruleGroupName": "KubernetesPodMemory",
        "resolutionActionName": "GetPodMemoryMetrics",
        "resolutionActionDescription": "Get Pod Memory Metrics",
        "rresolutionActionTemplateSteps": {"url":"#prometheusurl","query":"sum by(pod) (container_memory_working_set_bytes{container=~\".*\",container!=\"\",container!=\"POD\", pod=\"#name\",namespace=\"#namespace\"})","start":"#start","end":"#end","step":"5m"},
        "resolutionActionType": "MO",
        "sudorytemplateUuid": "10000000000000000000000000000002"
    },
    {
        "ruleGroupName": "KubernetesPodMemory",
        "resolutionActionName": "RestartPod",
