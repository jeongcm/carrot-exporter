        "rresolutionActionTemplateSteps": {"url":"#prometheusurl","query":"avg(rate(node_cpu_seconds_total{job=\"node-exporter\", node=\"#name\", mode=~\"user|system|iowait\"}[5m]))  * 100","start":"#start","end":"#end","step":"5m"},
        "resolutionActionType": "MO",
        "sudorytemplateUuid": "10000000000000000000000000000002"
